<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuessHarakat">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bb_backgroundquiz"/>

    <ImageView
        android:id="@+id/tsiAwal"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/harakat_tsi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257" />

    <ImageView
        android:id="@+id/hijaiyahTsii"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/tsii"
        app:layout_constraintTop_toBottomOf="@id/tsiAwal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/hijaiyahTsaa"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tsaa"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/tsiAwal"
        app:layout_constraintEnd_toStartOf="@id/hijaiyahTsii"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"/>

    <ImageView
        android:id="@+id/hijaiyaTsuu"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/tsuu"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/tsiAwal"
        app:layout_constraintStart_toEndOf="@id/hijaiyahTsii"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>